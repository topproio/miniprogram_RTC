<!--index.wxml-->
<view class="container">
	<view class="banner-section">
		<image class="banner-bg" src="../../assets/images/banner-bg.png"></image>
		<view class="banner-title">RTC -- 让沟通更有便捷</view>
		<view class="banner-desc">
			<view>RTC，实时音频通话</view>
			<view>toppro（中国）团队研制</view>
		</view>
		<view class="user-section">
			<image class="user-avatar" src="{{ avatarUrl || '../../assets/images/user_avatar.png'}}"></image>
			<view class="user-nickName">{{ nickName }}<text>hi</text></view>
			<view class="user-desc">欢迎来到RTC！</view>
			<view class="user-tips">
				<view>好友数量 {{ friend }} 个</view>
				<view>通话时长 {{ duration }} 小时</view>
			</view>
			<view class="user-operate">			
				<button class="user-btn" hover-class="hover-class">创建群聊</button>
				<navigator 
					url="/pages/AddFriend/AddFriend" 
					class="user-btn"
					hover-class="hover-class">添加好友</navigator>
			</view>
		</view>
	</view>
	<view class="call-section">
		<form
			class="call__form"
			wx:for="{{friendList}}" 
			wx:key="{{ index }}" 
			wx:for-item="item" 
			data-id="{{item.id}}"
			report-submit="true"
			bindsubmit="callHandle">
			<view class="call-item">
				<image class="call-avatar" src="{{ item.avatar || '../../assets/images/user_avatar.png'}}"></image>
				<view class="call-information">
					<view class="call-nickname">{{ item.name }}</view>
					<view class="call-time">{{ item.updated_at }}</view>
				</view>
				<button form-type="submit"
						class="call-btn" 
					    hover-class="hover-class">呼叫</button>
			</view>
		</form>
	</view>
</view>
