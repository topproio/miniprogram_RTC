<!--index.wxml-->
<view class="page {{isChating ? 'chating' : ''}}">
    <live-player
        v-if="{{playUrl}}"
        src="{{playUrl}}"
        mode="SD" 
        autoplay
        class="chat-player"
    />

    <live-pusher
        wx:if="{{pushUrl}}"
        url="{{pushUrl}}"
        mode="SD"
        autopush
        bindstatechange="statechange"
        class="chat-pusher"
    />

    <cover-view class="wait-tips">请通知好友进入通讯</cover-view>
    <cover-view class="notify-friend">
        <button type="primary" open-type="share">通知好友</button>
    </cover-view>

    <cover-view class="chat-opera">
        <cover-view class="opera__btn" hover-class="hover-class">
            <cover-image src="../../assets/images/phone_icon.png" />  
        </cover-view>
        <cover-view class="opera__btn" hover-class="hover-class">
            <cover-image src="{{ isMuted ? '../../assets/images/pngsound_cancel.png' : '../../assets/images/sound_live.png'}}" />
        </cover-view>
    </cover-view>
</view>